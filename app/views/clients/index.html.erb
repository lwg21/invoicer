<h2>Clients</h2>
<%= link_to new_client_path do %>
  <%= image_tag "plus.svg" %>
  <span>New client</span>
<% end %>


<div id="clients-grid">
  <% @clients.each do |client| %>
    <div class="debug-grey">
      <h3><%= client.designation %></h3>
      <div><%= [client.address_line1, client.address_line2].compact_blank.join(", ") %></div>
      <div><%= [client.postal_code, client.city].compact_blank.join(" ") %></div>
      <div><%= client.country %></div>
      <div><%= client.phone_number %></div>
      <div><%= client.email_address %></div>
      <div><%= client.vat_number %></div>
      <div>
        <%= link_to edit_client_path(client) do %>
          <%= image_tag "edit.svg" %>
          <span>Edit info</span>
        <% end %>
        <%= link_to invoice_client_path(client), data: { turbo_method: :post } do %>
          <%= image_tag "file-plus.svg" %>
          <span><%= "Invoice #{client.designation}" %></span>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
