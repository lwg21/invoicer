<h3>Edit <%= @company.user.email_address %>'s company</h3>

<%= form_for @company do |f| %>
  <%= hidden_field_tag :back_url, params[:back_url] %>

  <%= f.label :designation %>
  <%= f.text_field :designation %>

  <%= f.label :address_line1 %>
  <%= f.text_field :address_line1 %>

  <%= f.label :address_line2 %>
  <%= f.text_field :address_line2 %>

  <%= f.label :postal_code %>
  <%= f.text_field :postal_code %>

  <%= f.label :city %>
  <%= f.text_field :city %>

  <%= f.label :country %>
  <%= f.text_field :country %>

  <%= f.label :vat_number %>
  <%= f.text_field :vat_number %>

  <%= f.label :phone_number %>
  <%= f.text_field :phone_number %>

  <%= f.label :email_address %>
  <%= f.text_field :email_address %>

  <%= f.label :iban, "IBAN" %>
  <%= f.text_field :iban %>

  <%= f.label :bic, "BIC" %>
  <%= f.text_field :bic %>

  <%= f.label :jurisdiction, "Jurisdiction" %>
  <%= f.text_field :jurisdiction %>

  <%= f.submit %>
<% end %>

<%= link_to profile_path do %>
  <%= image_tag "left.svg" %>
  <span>Back to profile</span>
<% end %>
